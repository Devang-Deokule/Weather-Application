<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dd"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="100dp">
    <EditText
        android:id="@+id/editTextCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:drawableLeft="@drawable/loctaion"
        android:drawablePadding="10dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/merriweathersans_medium"
        android:hint="Enter city name"
        android:textColor="@color/white"
        android:textSize="24sp" />
    <TextView
        android:id="@+id/textViewCelsius"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextCity"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:textColor="@color/black"
        android:fontFamily="@font/merriweathersans_medium"
        android:textSize="50sp"
        android:text="0Â°C"/>
    <TextView
        android:id="@+id/textViewWeatherStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewCelsius"
        android:layout_marginStart="16dp"
        android:textColor="@color/black"
        android:fontFamily="@font/merriweathersans_bold"
        android:textSize="36sp"
        android:text="Sunny"/>
    <TextView
        android:id="@+id/textViewTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewWeatherStatus"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/merriweathersans_regular"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:text="12:00 PM"/>
    <Button
        android:id="@+id/buttonRefresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="175dp"
        android:textSize="24sp"
        android:drawableLeft="@drawable/search"
        android:text="Search Weather"
        android:textColor="@color/white"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextCity"
        android:layout_marginTop="595dp"
        android:text="Developed by Devang Deokule"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/merriweathersans_medium"
        android:textSize="22sp"></TextView>
</RelativeLayout>
